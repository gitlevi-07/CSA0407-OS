#include <stdio.h>
struct Process {
    int id, at, bt, prio, rt, ct, tat, wt;
};
"Enter number of processes: ");
    scanf("%d", &n);

    struct Process p[n];
    for (int i = 0; i < n; i++) {
        p[i].id = i+1;
int main() {
    int n, t = 0, done = 0;
    float avgTAT = 0, avgWT = 0;

    printf(
        printf("Enter AT, BT, Priority for P%d: ", i+1);
        scanf("%d %d %d", &p[i].at, &p[i].bt, &p[i].prio);
        p[i].rt = p[i].bt;
    }

    while (done < n) {
        int idx = -1, best = 1e9;
        for (int i = 0; i < n; i++) {
            if (p[i].at <= t && p[i].rt > 0 && p[i].prio < best) {
                best = p[i].prio;
                idx = i;
            }
        }
        if (idx != -1) {
            p[idx].rt--; t++;
            if (p[idx].rt == 0) {
                done++;
                p[idx].ct = t;
                p[idx].tat = p[idx].ct - p[idx].at;
                p[idx].wt = p[idx].tat - p[idx].bt;
                avgTAT += p[idx].tat;
                avgWT += p[idx].wt;
            }
        } else t++;
    }

    printf("\nPID\tAT\tBT\tPrio\tCT\tTAT\tWT\n");
    for (int i = 0; i < n; i++)
        printf("P%d\t%d\t%d\t%d\t%d\t%d\t%d\n",
               p[i].id, p[i].at, p[i].bt, p[i].prio,
               p[i].ct, p[i].tat, p[i].wt);

    printf("\nAvg TAT = %.2f\nAvg WT = %.2f\n", avgTAT/n, avgWT/n);
    return 0;
}
